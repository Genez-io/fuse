{
  "compilerOptions": {
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "module": "node16",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2022",
      "moduleResolution": "node16",
      "outDir": "dist",
      "baseUrl": ".",
      "rootDir": ".",

      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "lib": [
        "es6"
    ],
  },
  "include": [
      "src/**/*", "package.json"
  ],
  "exclude": ["data-gnz/**/*"]
}
